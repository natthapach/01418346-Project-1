<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ProfileTheme" parent="AppTheme">
        <item name="colorPrimary">#000</item>
        <item name="checkboxStyle">@style/FollowCheckBoxStyle</item>
        <item name="actionButtonStyle">@style/FollowCheckBoxStyle</item>
    </style>
    <style name="FollowCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/like_icon</item>
    </style>

    <style name="UploadRecipeDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Uploadingâ€¦</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="Header1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Header1.Dark">
        <item name="android:textColor">@color/text_dark_L1</item>
    </style>

    <style name="Header1.Light">
        <item name="android:textColor">@color/text_light_L1</item>
    </style>

    <style name="Header2.Dark">
        <item name="android:textColor">@color/text_dark_L2</item>
    </style>

    <style name="Header2.Light">
        <item name="android:textColor">@color/text_light_L2</item>
    </style>

    <style name="NormalText.Dark">
        <item name="android:textColor">@color/text_dark_L3</item>
    </style>

    <style name="NormalText.Light">
        <item name="android:textColor">@color/text_light_L3</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
